<%= form_with model: @user do |form| %>
  <div class="container">
  <div class="row">
    <div class="col-6">
      <div class="mb-3 row">
        <%= form.label :name %>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= form.label :password %>
        <div class="col-sm-10">
          <%= form.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= form.submit "login", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>


